@model IMobile.Models.Cart

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Cart</h4>
    <hr />
    <dl class="dl-horizontal">

        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>
                        <h4>Items</h4>
                    </th>
                    <th>
                        <h4> Quantity</h4>
                    </th>
                    <th>
                        <h4> Price</h4>
                    </th>
                </tr>
                @{
                    int TotalPrice = 0;
                }
                @foreach (var item in Model.DeviceList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Device.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Device.Price)
                        </td>
                    </tr>
                    TotalPrice += (int)item.Device.Price * (int)item.Quantity;
                }
                <tr>
                    <td align="right" colspan="3">Total Price: @TotalPrice</td>

                </tr>
            </table>

        </dd>


    </dl>


</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CartID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
